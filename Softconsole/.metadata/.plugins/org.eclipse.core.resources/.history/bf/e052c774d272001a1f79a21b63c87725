#include "lcd_characters.h"

int ASCII_to_index_3x5
(
    int ASCII_CODE
)
{
    if(ASCII_CODE >= 48 && ASCII_CODE <= 57){
        return ASCII_CODE - 48;
    }
    else if(ASCII_CODE >= 65 && ASCII_CODE <= 90){
        return ASCII_CODE - 55;
    }
    else{
        return -1;
    }
}

uint8_t * ascii_3x5_border
(
    int ascii_3x5_index
)
{
    uint8_t border_char[] = {   0b00000000,
                                0b00000000,
                                0b00000000,
                                0b00000000,
                                0b00000000};
    for(int i = 0; i < 3; i++){
        border_char[i+1] = ascii_3x5[ascii_3x5_index][i] << 1;
    }
    return &border_char;
}
