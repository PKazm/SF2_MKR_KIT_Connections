#define LCD_MAX_X 84
#define LCD_MAX_Y 6



typedef struct nokia_instance
{
    addr_t address;
} nokia_instance_t;


void nokia_init
(
    nokia_instance_t * nokia_inst,
    addr_t base_addr,
    uint32_t func_set,
    uint32_t disp_ctrl,
    uint32_t temp_ctrl,
    uint32_t bias_sys,
    uint32_t Vop_set
);


uint32_t nokia_get_reg
(
    nokia_instance_t * nokia_inst,
    addr_t reg_adr
);

void nokia_set_reg
(
    nokia_instance_t * nokia_inst,
    addr_t reg_adr,
    uint32_t reg_val
);

uint32_t nokia_get_x
(
    nokia_instance_t * nokia_inst
);

void nokia_set_x
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_y
(
    nokia_instance_t * nokia_inst
);

void nokia_set_y
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_data
(
    nokia_instance_t * nokia_inst
);

void nokia_set_data
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

void nokia_set_data_reg
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_x,
    uint32_t reg_y,
    uint32_t reg_data
);

uint32_t nokia_get_func_set
(
    nokia_instance_t * nokia_inst
);

void nokia_set_func_set
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_disp_ctrl
(
    nokia_instance_t * nokia_inst
);

void nokia_set_disp_ctrl
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_temp_ctrl
(
    nokia_instance_t * nokia_inst
);

void nokia_set_temp_ctrl
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_bias_sys
(
    nokia_instance_t * nokia_inst
);

void nokia_set_bias_sys
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t nokia_get_Vop_set
(
    nokia_instance_t * nokia_inst
);

void nokia_set_Vop_set
(
    nokia_instance_t * nokia_inst,
    uint32_t reg_val
);

uint32_t* nokia_get_pixel_reg_block
(
    nokia_instance_t * nokia_inst,
    uint32_t x_left,
    uint32_t y_top,
    uint32_t x_right,
    uint32_t y_bot
);

void nokia_set_pixel_reg_block
(
    nokia_instance_t * nokia_inst,
    uint32_t x_left,
    uint32_t y_top,
    uint32_t x_delta,
    uint32_t y_delta,
    uint32_t * pixel_regs
);

#ifdef __cplusplus
}
